// Prisma schema for Auth system

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials auth
  phone         String?   // Phone number after registration
  phoneVerified Boolean   @default(false)
  role          String    @default("user") // user | admin
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  projects      ClientProject[]
}

// Generator Project - full pipeline data
model ClientProject {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Status tracking
  status          String   @default("intake_pending") // ProjectStatus

  // Module 1: INTAKE - Business info
  companyName     String?
  businessType    String?
  businessDescription String?
  targetAudience  String?
  competitors     String?  // JSON array
  siteGoals       String?  // JSON array
  designPreferences String?
  additionalNotes String?
  contactName     String?
  contactEmail    String?
  contactPhone    String?

  // Module 2: RESEARCHER - Research results
  researchData    String?  // JSON: ResearchResult

  // Module 3: PLANNER - Project plan
  planData        String?  // JSON: ProjectPlan
  clientApproved  Boolean  @default(false)
  approvedAt      DateTime?

  // Module 4: GENERATOR - Generated site
  generatedSiteData String? // JSON: GeneratedSite
  projectPath     String?

  // Module 5: DEPLOYER - Deployment info
  deploymentData  String?  // JSON: DeploymentResult
  deployedUrl     String?  // Final production URL
  previewUrl      String?

  // Module 6: DOCUMENTS - Generated docs
  kpPdfUrl        String?
  presentationPdfUrl String?
  emailSent       Boolean  @default(false)
  emailSentAt     DateTime?

  // Error tracking
  lastError       String?
  failedModule    String?  // Which module failed

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  completedAt     DateTime?
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
